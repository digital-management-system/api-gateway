{
  "name": "@microbusiness/dms-api-gateway",
  "version": "0.1.0",
  "description": "Digital Management System API Gateway",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "jest",
    "generate-graphql-schema": "babel-node script/GenerateGraphqlSchema.js",
    "lint": "eslint --ext .jsx --ext .js src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "format": "prettier --write --single-quote true --trailing-comma all --print-width 150 ./src && npm run fixlint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-management-system/api-gateway.git"
  },
  "author": "Morteza Alizadeh",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/digital-management-system/api-gateway/issues"
  },
  "homepage": "https://github.com/digital-management-system/api-gateway#readme",
  "dependencies": {
    "graphql": "^15.0.0",
    "graphql-relay": "^0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
